<div class="row">
<div class="col-md-12">
<div class="panel panel-default">
<div class="panel-body">
<table  id="table-list" class="table table-striped table-bordered table-hover">


  <thead>
    <tr>
     
      <th>Fichier</th>
      <th>Lien</th>
      <th>N°Crédit</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @borderaus.each do |borderau| %>
      <tr>
       
        <td><%= borderau.name %></td>
        <td><%= borderau.file_name %></td>
        <td><%= borderau.credit_identifier %></td>
     
        <td><%= link_to "Télécharger", download_bordereau_path(borderau.name) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
