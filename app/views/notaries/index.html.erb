<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div class="index-heading pull-left">
				<h3>Liste des notaires</h3>
			</div>
			<div class="pull-right">
				<p>
				<%= link_to raw('<i class="fa fa-plus" aria-hidden="true"></i> Nouveau'), new_notary_path, class: "btn btn-primary", remote: true %>

				</p>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<div class="panel panel-default">
				<div class="panel-body">

					<table id="table-list" class="table table-striped table-bordered table-hover">
						<thead>
							<tr>
								<th>Nom et prénom</th>
								<th>Adresse</th>
								<th>Téléphone</th>
								<th>Email</th>
								<th>Actions</th> 
							</tr>
						</thead>

						<tbody class: "notaries">
							<%= render("index") %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
		<div id="notary-modal" class="modal fade"></div>
	</div>
</div>
