<!DOCTYPE html>
<html>
	<head>

		<% if is_superadmin? %>
			<title><%= "Tableau de bord - #{@app_name}" %></title>
		<% else %>
			<title><%= "Tableau de bord - #{get_app_name(current_user)}" %></title>
		<% end %>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
		<div class="wrapper">
		<%= render :partial => 'layouts/partials/flash_messages', :flash => flash %>
	
		<!-- Left Sidebar -->
	  <%= render('layouts/partials/dashboard/sidebar') %>
	   <!-- End Left sidebar -->


	 

	  <!-- Content Wrapper. Contains page content -->
	  <div class="main-panel">
	  		<!-- Left Sidebar -->
			  <%= render('layouts/partials/dashboard/navbar') %>
			   <!-- End Left sidebar -->
				<!-- Left Sidebar -->
		<% if is_admin? %>
			<%= render('layouts/partials/smtp_alert') %>
			<%= render('layouts/partials/unregistered_alert') %>
		<% end %>

	   <!-- End Left sidebar -->
				
	    <%= yield %>
	 

	  <!-- Main Footer -->
	  <%= render('layouts/partials/dashboard/footer') %>
	   <!-- End Main Footer -->
 	</div><!-- /.content-wrapper -->

	</div><!-- ./wrapper -->
  </body>
</html>
