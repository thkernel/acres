<div class="container">
    <div class="row">
    <div class="col-md-12">
    <div class="index-heading pull-left">
    <h3>Liste des producteurs</h3>
    </div>
   <div class="pull-right">
   <p>
    <%= link_to 'Nouveau', new_producer_path, class: "btn btn-primary" %>
    </p>
    </div>
    </div>
 </div>
  <div class="row">
 <div class="col-lg-12">
    <div class="panel panel-default">
          
             
                    <div class="panel-body">

<table id="table-list" class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Email</th>
      <th>City</th>
      <th>Country</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @producers.each do |producer| %>
      <tr>
        <td><%= producer.first_name %></td>
        <td><%= producer.last_name %></td>
        <td><%= producer.address %></td>
        <td><%= producer.phone %></td>
        <td><%= producer.email %></td>
        <td><%= producer.city %></td>
        <td><%= producer.country %></td>
        <td><%= producer.notes %></td>
        <td><%= link_to 'Show', producer %></td>
        <td><%= link_to 'Edit', edit_producer_path(producer) %></td>
        <td><%= link_to 'Destroy', producer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
    </div>
    </div>
</div>
</div>
</div>
