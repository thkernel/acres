<%= form_with(model: excercise_year, local: false) do |form| %>
<div class="modal-body">
    <ul class="errors">
    
    </ul>


  <div class="form-group">
    <%= form.label :nom %>
    <%= form.text_field :name, id: :excercise_year_name, class: "form-control", placeholder: "Ex: 2019", required: true %>
  </div>
 <div class="form-group">
    <%= form.label "Date début"%>
    <%= form.date_field :start_date, id: :excercise_year_start_date, class: "form-control",  required: true %>
  </div>

 <div class="form-group">
    <%= form.label "Date fin" %>
    <%= form.date_field :end_date, id: :excercise_year_end_date, class: "form-control", placeholder: "Ex: 2018-2019", required: true %>
  </div>
  <div class="form-group">
    <%= form.label "Statut" %>
    <%= form.select(:status, ExcerciseYear::STATUS, {prompt: "Sélectionner le statut"}, class: "form-control", required: true) %>

  </div>

 </div><!-- modal body -->
<div class="modal-footer">
        <%= link_to "Annuler", "#", class: "btn", data: {dismiss: "modal"} %>
        <%= form.submit "Enregistrer", class: "btn btn-warning",  "data-loading-text"=>"Loading...", autocomplete: "off" %>
</div>
<% end %>
