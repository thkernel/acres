$("ul.errors").html("");
<% if @payment_delay.errors.any? %>
  <% @payment_delay.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"));
  <% end %>
<% else %>
  $(".index").html("<%= escape_javascript(render 'index') %>");
  $("#payment-delay-modal").modal("hide");
 
<% end %>