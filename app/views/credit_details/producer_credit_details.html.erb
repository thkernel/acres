<div class="container">

<div class="title">
<h1>Détails (Echéancier et paiements effectués)</h1>

<h3>Date de l'acte: <%= @credit.acte_date %></h3>
<h3>Numéro du dossier: <%= @credit.credit_id %></h3>
</div>

<table id="table-list" class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Tranche</th>
      <th>Date</th>
      <th>Commission</th>
      <th>Montant cumulé</th>
      <th>Payé par la banque</th>
      <th>Payé à l'apport. ou au product.</th>
      <th> Actions</th>
    </tr>
  </thead>

  <tbody>
  <% if @credit_details.present? %>
    <% @credit_details.each do |credit_detail| %>
      <tr>
        <td><%= credit_detail.installment_payment %></td>
        <td><%= credit_detail.installment_date %></td>
        <td><%= credit_detail.commission %></td>
        <td><%= credit_detail.cumulative_amount %></td>
        <td><%= credit_detail.paid_by_bank %></td>
        <td><%= credit_detail.paid_to_contributor_or_producer %></td>
        <td><%= link_to 'Modifier', edit_credit_detail_path(credit_detail) %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

</div>

