<div class="container">
    <section class="content-header">
        <h1>
            Rechercher         
                    
        </h1>
	</section>
	
    <section class="content">
        <div class="row">
            <div class="col-md-12">
            	<div class="panel panel-default">
              		<div class="panel-body">
                        <%= form_with url: search_path, method: :get, local: false , class: "form-inlinee" do |f| %>
                            <div class="row lr-margin">	

                                <div class="row"><!-- date row -->
                                    <div class="col-md-6">
                                        <fieldset>
                                            <legend>Date production</legend>
                                            <div class="col-md-6">
                                                <div class="form-group">

                                                    <%= f.label "Date départ" %>
                                                    <%= f.date_field :production_date_debut, id: :production_date_debut, class: "form-control " %>

                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">

                                                    <%= f.label "Date fin" %>
                                                    <%= f.date_field :production_date_fin, id: :production_date_debut, class: "form-control " %>

                                                </div>
                                            </div>
                                        </fieldset>
                                    </div>
                                    <div class="col-md-6">
                                        <fieldset>
                                            <legend>Date acte</legend>
                                            <div class="col-md-6">
                                                <div class="form-group">

                                                    <%= f.label "Date départ" %>
                                                    <%= f.date_field :acte_date_debut, id: :acte_date_debut, class: "form-control " %>

                                                </div>

                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <%= f.label "Date fin" %>

                                                    <%= f.date_field :acte_date_debut, id: :acte_date_debut, class: "form-control " %>
                                                </div>
                                            </div>
                                        </fieldset>
                                     </div>
                                </div><!-- end row -->
                               
                                <div class="row">
                                    
                                        <div class="col-md-6">
                                            <div class="form-group collection-check-boxes">
                                                <%= f.label "Banque(s)" %><br />
                                                <%= f.collection_check_boxes(:bank, @banks, :name, :name) %>
                                               
                                                <!-- <%= f.collection_select(:bank, @banks, :name, :name , {prompt: "Banque"}, {class: "form-control chosen-select", multiple: true, "data-placeholder": 'Sélectionner une option'}) %> -->

                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-group  collection-check-boxes">
                                                <%= f.label "Apporteur" %><br />
                                                
                                                <%= f.collection_check_boxes(:contributor, @contributors, :full_name, :full_name) %>

                                                <!-- <%= f.collection_select(:contributor, @contributors, :full_name, :full_name, {prompt: "Apporteurs"}, {class: "form-control chosen-select", multiple: true, "data-placeholder": 'Sélectionner une option'}) %> -->
                                            </div>
                                        </div>
                                
                                
                                    <div class="col-md-6">
                                        <div class="form-group  collection-check-boxes">
                                            <%= f.label "Producteur" %><br />
                                                <%= f.collection_check_boxes(:producer,@producers, :full_name, :full_name) %>

                                            <!-- <%= f.collection_select(:producer, @producers, :full_name, :full_name, {prompt: "Producteurs"}, {class: "form-control chosen-select", multiple: true, "data-placeholder": 'Sélectionner une option'}) %> -->
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <%= f.label "Notaire" %>
                                            <%= f.collection_select(:notary, @notaries, :full_name, :full_name, {include_blank: true }, class: "form-control") %>
                                        </div>
                                    </div>
                                </div> 
                            </div>

                            <div class="row lr-margin">
                                <div class="col-md-12">
                                    <div class="form-group search-btn">
                                        <%= f.submit "Rechercher", class: "btn btn-primary btn-block" %>
                                    </div>
                                </div>
                            </div>
                        <% end %>
                    </div>
                </div>

                <div class="export ">
                    <p>
                    </p>
                    </div>
                <div class="panel panel-default">
              	    <div class="panel-body">
                        <table id="table-list" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                        
                                    <th>Montant empruntés</th>
                                    <th>Banque</th>
                                    <th>Appo</th>
                                    <th>% com appo</th>
                                    <th>Com appo</th>
                                    <th>Prod</th>
                                    <th>% com prod</th>
                                    <th>Com prod</th>
                                    <th>% com <%= get_admin_company(current_user).name  %></th>
                                    <th>Com totale banque</th>
                                    <th>Com nette <%= get_admin_company(current_user).name  %></th>
                                   
                                </tr>
                            </thead>
                            <tbody class="search-result">
                            
                                <%= render("search/partials/results") %>
                            </tbody>
                           
                        </table>
            	    <div>
      		    </div>    
    	    </div>
  	    </div>  
	</section>
</div>


