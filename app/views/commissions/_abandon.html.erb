<!-- Modal -->

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">Abandon de commission</h4>
        </div>
            <%= form_with(url: post_abandon_path, local: true) do |form| %>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                         <div class="form-group ">
                            <%= form.label "Banque" %>
                                <%= form.text_field :bank_name, class: "form-control",  value: @bank.name if @bank %>
                            </div>

                            <div class="form-group ">
                                <%= form.label "Nouveau % Com" %>
                                <%= form.text_field :commission_rate, class: "form-control", value: @bank.commission_percentage if @bank %>
                            </div>

                             <div class="form-group ">
                               
                                <%= form.hidden_field :credit_id, class: "form-control",  value: @credit_id if @credit_id %>
                            </div>
                            
                            
                        </div>
                    </div>
                </div><!-- modal body -->
                <div class="modal-footer">
                    <%= link_to "Annuler", "#", class: "btn", data: {dismiss: "modal"} %>
                    <%= form.button "Abandonner",  class: "btn btn-warning",  data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Traitement encours..."}, autocomplete: "off" %>
                </div>
            <% end %>
    </div>
</div>