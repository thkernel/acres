

<div class="container">

<div class="row">
<div class="col-md-12">
<div class="index-heading pull-left">
  <p>
    <h3>Résumé des commissions: <%= producer_name %> | Pourcentage commission: <%= @producer_commission_percentage %>%</h3>
    </p>
    </div>
<div class="pull-right">

</div>
</div>
</div>

<div class="row">
<div class="col-md-12">
<div class="panel panel-default">
<div class="panel-body">
<table  id="table-list" class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
    
      <th>Date acte</th>
      <th>Numéro dossier</th>
      <th>Banque</th>
      <th>Client</th>
      <th>Montant empruntés</th>
      <th>Montant commission</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>

  <tr>
                        
    <td colspan="4" class="text-center"><strong>TOTAUX</strong></td>
    
    <td><strong><%= number_to_currency @total_montant_credit, unit: "", seperator: ",", delimiter: "." %></strong></td>
    <td colspan="3" class="text-center">
    <strong><%= number_to_currency @total_commission_producteur, unit: "", seperator: ",", delimiter: "." %></strong></td>
    
          
    </tr>

    <% commissions.each do |commission| %>
      <tr>
        <td><%= commission.acte_date %></td>
        <td><%= commission.credit_id %></td>
        <td><%= commission.bank_name %></td>
        <td><%= credit_customer_name(commission.credit_id) %></td>
        <td><%= number_to_currency commission.amount_credit, unit: "", seperator: ",", delimiter: "." %></td>
        <td><%= number_to_currency commission.producer_commission, unit: "", seperator: ",", delimiter: "." %></td>
        <td>
        <%= link_to raw('<i class="fa fa-plus-circle" aria-hidden="true"></i>
'), show_producer_credit_details_path(commission.credit_id) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
</div>
</div>

</div>