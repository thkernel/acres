

<div class="container">

<div class="row">
<div class="col-md-12">
<div class="index-heading pull-left">
  <p>
    <h3>Résumé des commissions: <%= producer_name %> | Pourcentage commission: <%= @producer_commission_percentage %>%</h3>
    </p>
    </div>
<div class="pull-right">

</div>
</div>
</div>

<div class="row">
<div class="col-md-12">
<div class="panel panel-default">
<div class="panel-body">
<table  id="table-list" class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
    
      <th>Date acte</th>
      <th>Numéro dossier</th>
      <th>Client</th>
      <th>Banque</th>
  
      <th>Montant emprunté</th>
      <th>% com</th>
      <th>Montant commission</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>

  

    <% commissions.each do |commission| %>

  

      <tr>
        <td><%= commission.acte_date.strftime("%d/%m/%Y") if commission.acte_date %></td>
        <td><%= commission.credit_identifier %></td>
        <td><%= credit_customer_name(commission.credit_identifier).humanize if credit_customer_name(commission.credit_identifier) %></td>

        <td><%= commission.bank_name.humanize %></td>
       
        <td class="blue-amount"><%= number_to_currency commission.amount_credit, unit: "", seperator: ",", delimiter: "." %></td>
        <td><%= number_to_currency commission.producer_commission_percentage, unit: "", seperator: ",", delimiter: "." %></td>

        <td class="blue-amount"><%= number_to_currency commission.producer_commission, unit: "", seperator: ",", delimiter: "." %></td>
        <td>
        <%= link_to raw('<i class="fa fa-plus-circle" aria-hidden="true"></i>
'), show_producer_credit_details_path(commission.credit_identifier) %>
        </td>
      </tr>
    <% end %>
  </tbody>
  <tfoot class="tfooter">
		<tr>
      <th>TOTAUX</th>
      <th></th>
     
      <th></th>
      <th></th>
      
      <th class="blue-amount">
        <strong><%= number_to_currency @total_montant_credit, unit: "", seperator: ",", delimiter: "." %></strong>

      </th>
    <th></th>
    <th class="blue-amount">
        <strong><%= number_to_currency @total_commission_producteur, unit: "", seperator: ",", delimiter: "." %></strong>

    </th>
    <th></th>
    </tr>
	</tfoot>
</table>

</div>
</div>
</div>

</div>