

<div class="container">

<div class="row">
<div class="col-md-12">
<div class="index-heading pull-left">
	<p>
    	<h3>Résumé des commissions: <%= @contributor_name %></h3>
    </p>
    </div>
<div class="pull-right">

</div>
</div>
</div>

<div class="row">
<div class="col-md-12">
<div class="panel panel-default">
<div class="panel-body">
<table  id="table-list" class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>N°Dossier</th>
      <th>Date prod.</th>
      <th>Date acte</th>
      <th>Banque</th>
      <th>Client</th>
      <th>Montant empruntés</th>
      <th>% com</th>
      <th>Montant com</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
   <tr>
                        
    <td colspan="5" class="text-center"><strong>TOTAUX</strong></td>
    
    <td><strong><%= @total_montant_credit %></strong></td>
    <td colspan="3" class="text-center">
    <strong><%= @total_commission_apporteur %></strong></td>
    
          
    </tr>

    <% if @commissions.present? %>
      <% @commissions.each do |commission| %>
        <tr>
          <td><%= commission.credit_id %></td>
          <td><%= commission.production_date %></td>
          <td><%= commission.acte_date %></td>
          <td><%= commission.bank_name %></td>
          <td><%= credit_customer_name(commission.credit_id) %></td>
          <td><%= commission.amount_credit %></td>
          <td><%= commission.contributor_commission_percentage %></td>
          <td><%= commission.contributor_commission %></td>
          <td>
          <%= link_to raw('<i class="fa fa-plus-circle" aria-hidden="true"></i>
  '), show_contributor_credit_details_path(commission.credit_id) %>
          </td>
        </tr>
	  <% end %>
	<% end %>
  </tbody>
</table>

</div>
</div>
</div>

</div>