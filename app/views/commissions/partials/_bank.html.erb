

<div class="container-fluid">

<div class="row">
<div class="col-md-12">
<div class="index-heading pull-left">
<p>
    <h3>Résumé banque: <%= bank_name %></h3>
    </p>
    </div>
<div class="pull-right">

</div>
</div>
</div>

<div class="row">
<div class="col-md-12">
<div class="panel panel-default">
<div class="panel-body">
<table  id="table-list" class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>N°Dossier</th>
      <th>Client</th>
      <th>Date prod.</th>
      <th>Date acte</th>
      <th>Montant emprunté</th>
      <th>% com appo</th>
      <th>Com appo</th>
      <th>% com prod</th>
      <th>Com prod</th>
      <th>% com banque</th>
      <th>Com brute Acres</th>
      <th>% net Acres</th>
      <th>Com nette Acres</th>
    </tr>
  </thead>

  <tbody>
  	

    <% @commissions.each do |commission| %>

       


      <tr>
        <td><%= commission.credit_id %></td>
         <td><%= credit_customer_name(commission.credit_id) %></td>
        <td><%= commission.production_date.strftime("%d/%m/%Y") if commission.production_date %></td>
        <td><%= commission.acte_date.strftime("%d/%m/%Y") if commission.acte_date %></td>
        <td class="blue-amount"><%= number_to_currency commission.amount_credit, unit: "", seperator: ",", delimiter: "." %></td>
        <td><%= number_to_currency commission.contributor_commission_percentage, unit: "", seperator: ",", delimiter: "." %></td>
        <td class="blue-amount"><%= number_to_currency commission.contributor_commission, unit: "", seperator: ",", delimiter: "." %></td>
        <td><%= number_to_currency commission.producer_commission_percentage, unit: "", seperator: ",", delimiter: "." %></td>
        <td class="blue-amount"><%= number_to_currency commission.producer_commission , unit: "", seperator: ",", delimiter: "."%></td>
        <td><%= number_to_currency commission.bank_commission_percentage, unit: "", seperator: ",", delimiter: "." %></td>
        <td class="blue-amount"><%= number_to_currency commission.bank_commission, unit: "", seperator: ",", delimiter: "." %></td>
        <td><%= "#{number_to_currency commission.company_commission_percentage, unit: "", seperator: ",", delimiter: "."}%" %></td>
        <td class="blue-amount"><%= number_to_currency commission.company_commission, unit: "", seperator: ",", delimiter: "." %></td>

        
      </tr>
    <% end %>
  </tbody>

  <tfoot class="tfooter">
		<tr>
                        
            <th>TOTAUX</th>
            <th></th>
            <th></th>
            <th></th>
            <th class="blue-amount"><strong><%= number_to_currency @total_montant_credit, unit: "", seperator: ",", delimiter: "." %></strong></th>
            <th></th>
            <th class="blue-amount"><strong><%= number_to_currency @total_commission_apporteur, unit: "", seperator: ",", delimiter: "." %></strong></th>
            <th></th>

            <th class="blue-amount"><strong><%= number_to_currency @total_commission_producteur, unit: "", seperator: ",", delimiter: "." %></strong></th>
            <th></th>
            <th></th>
			      <th></th>

            <th class="blue-amount"><strong><%= number_to_currency @total_commission_nette_company, unit: "", seperator: ",", delimiter: "." %></strong></th>
            
        </tr>
	</tfoot>
</table>

</div>
</div>
</div>

</div>