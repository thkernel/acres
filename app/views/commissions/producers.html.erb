

<div class="container">

<div class="row">
<div class="col-md-12">
<div class="index-heading pull-left">
    <h3>Commissions des producteurs</h3>
    </div>
<div class="pull-right">

</div>
</div>
</div>

<div class="row">
<div class="col-md-12">
<div class="panel panel-default">
<div class="panel-body">
<table  id="table-list" class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
    <th>N°Dossier</th>
      <th>Client</th> 
      <!-- <th>Apporteur</th> -->
      <th>Prod</th>
      <th>% com prod</th>
      <!-- <th>Commission apporteur</th> -->
      <th>Com prod</th>
      <!-- <th>Commission banque</th> -->
      <th>Com nette <%= current_company.name %> </th>
      <th>Montant empruntés</th>
      
    </tr>
  </thead>

  <tbody>
 

  <% if @commissions.present? %>
    <% @commissions.each do |commission| %>
      <tr>
      <td>
      <%= commission.credit_id %>
    </td>
    <td><%= credit_customer_name(commission.credit_id).humanize  if credit_customer_name(commission.credit_id) %></td>

		<td>
			<% if commission.producer_name.present? %>
				<%= link_to "#{commission.producer_name.humanize}", producer_resume_path(producer_name: commission.producer_name) %>
			<% end %>
    </td>
    <td><%= "#{number_to_currency commission.producer_commission_percentage, unit: "", seperator: ",", delimiter: "."}%" %></td>

        <td class="blue-amount"><%= number_to_currency commission.producer_commission, unit: "", seperator: ",", delimiter: "." %></td>
        <td class="blue-amount"><%= number_to_currency commission.company_commission, unit: "", seperator: ",", delimiter: "." %></td>
        <td class="blue-amount"><%= number_to_currency commission.amount_credit, unit: "", seperator: ",", delimiter: "." %></td>
        
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

</div>
</div>
</div>

</div>