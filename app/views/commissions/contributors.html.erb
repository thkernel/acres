

<div class="container">

<div class="row">
<div class="col-md-12">
<div class="index-heading pull-left">
    <h3>Commissions des apporteurs</h3>
    </div>
<div class="pull-right">

</div>
</div>
</div>

<div class="row">
<div class="col-md-12">
<div class="panel panel-default">
<div class="panel-body">
<table  id="table-list" class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
    <th>N°Dossier</th>
      <!-- <th>Banque</th> -->
      <th>Apporteur</th>
      <th>% com appo</th>
      <!-- <th>Producteur</th> -->
      <th>Com appo</th>
      <!-- <th>Commission producteur</th> -->
      <!-- <th>Commission banque</th> -->
      <th>Com nette <%= current_company.name  %></th>
      <th>Montant empruntés</th>
     
    </tr>
  </thead>

  <tbody>

  

    <% if @commissions.present? %>
    <% @commissions.each do |commission| %>

      <tr>
      <td>
      <%= commission.credit_id %>
      </td>
		<td>
			<% if commission.contributor_name.present? %>
				<%= link_to "#{commission.contributor_name}", contributor_resume_path(contributor_name: commission.contributor_name) %>
			<% end %>
		</td>
    <td><%= "#{ number_to_currency commission.contributor_commission_percentage, unit: "", seperator: ",", delimiter: "."}%" %></td>
            <td><%= number_to_currency commission.contributor_commission, unit: "", seperator: ",", delimiter: "." %></td>
       
        
        <td><%= number_to_currency commission.company_commission , unit: "", seperator: ",", delimiter: "."%></td>
        <td><%= number_to_currency commission.amount_credit, unit: "", seperator: ",", delimiter: "." %></td>
        
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

</div>
</div>
</div>

</div>