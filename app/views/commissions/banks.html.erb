

<div class="container-fluid">

<div class="row">
<div class="col-md-12">
<div class="index-heading pull-left">
    <h3>Commissions des Banques</h3>
    </div>
<div class="pull-right">

</div>
</div>
</div>

<div class="row">
<div class="col-md-12">
<div class="panel panel-default">
<div class="panel-body">
<table  id="table-list" class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
    <th>N°Dossier</th>
    <th>Client</th>
      <th>Banque</th>
      <th>% com banque</th>
      <th>Com banque</th>
      <th>Montant emprunté</th>
      <!--<th>Actions</th>-->
    </tr>
  </thead>

  <tbody>
    <% @commissions.each do |commission| %>
      <tr>
      <td>
        <%= commission.credit_id %>
      </td>
               <td><%= credit_customer_name(commission.credit_id).humanize %></td>

      		<td>
				<% if commission.bank_name.present? %>
					<%= link_to "#{commission.bank_name.humanize}", bank_resume_path(bank_name: commission.bank_name) %>
				<% end %>
			</td>
      <td><%= "#{number_to_currency commission.bank_commission_percentage, unit: "", seperator: ",", delimiter: "."}%" %></td>

          	<td class="blue-amount"><%= number_to_currency commission.bank_commission, unit: "", seperator: ",", delimiter: "." %></td>
           
        	<td class="blue-amount"><%= number_to_currency commission.amount_credit, unit: "", seperator: ",", delimiter: "." %></td>
        	
      </tr>
    <% end %>
  </tbody>
</table>

</div>
</div>
</div>

</div>