

<div class="container">

<div class="row">
<div class="col-md-12">
<div class="index-heading pull-left">
    <h3>Commissions des Banques</h3>
    </div>
<div class="pull-right">

</div>
</div>
</div>

<div class="row">
<div class="col-md-12">
<div class="panel panel-default">
<div class="panel-body">
<table  id="table-list" class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
    <th>N°Dossier</th>
      <th>Banque</th>
      <th>Pourcentage commission banque</th>
      <th>Commission banque</th>
      <th>Montant empruntés</th>
      <!--<th>Actions</th>-->
    </tr>
  </thead>

  <tbody>
    <% @commissions.each do |commission| %>
      <tr>
      <td>
        <%= commission.credit_id %>
      </td>
      		<td>
				<% if commission.bank_name.present? %>
					<%= link_to "#{commission.bank_name}", bank_resume_path(bank_name: commission.bank_name) %>
				<% end %>
			</td>
      <td><%= "#{commission.bank_commission_percentage}%" %></td>

          	<td><%= commission.bank_commission %></td>
           
        	<td><%= commission.amount_credit %></td>
        	
      </tr>
    <% end %>
  </tbody>
</table>

</div>
</div>
</div>

</div>