$("ul.errors").html("");
<% if @bank.errors.any? %>
  <% @bank.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"));
  <% end %>
<% else %>
  $(".banks").html("<%= escape_javascript(render 'index') %>");
  $("#bank-modal").modal("hide");
 
<% end %>