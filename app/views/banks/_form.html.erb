
<%= form_with(model: bank, local: false) do |form| %>
	<div class="modal-body">
		<ul class="errors">
			<% @bank.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>

		<div class="warning alert alert-danger">
			ATTENTION, le pourcentage de commission, est fixé annuellement. <br />
			Aucun rétro calcul ne sera effectué lorsque vous modifier ce pourcentage.
		</div>

		<div class="col-md-6">
			<div class="form-group">
				<%= form.label "Nom" %>
				<%= form.text_field :name, id: :bank_name, class:"form-control", placeholder: "Nom" %>
			</div>

			<div class="form-group">
				<%= form.label "Pourcentage commission (%)" %>
				<%= form.number_field :commission_percentage, id: :bank_commission_percentage,  class:"form-control" %>
			</div>
			<div id="bank_date_effet" class="form-group">
				<%= form.label "Date d'effet" %>
				<%= form.date_field :date_effet,  class:"form-control", required: true %>
			</div>


			<div class="form-group">
				<%= form.label "Nombre d'écheance" %>
				<%= form.number_field :number_of_dates, id: :bank_number_of_dates,  class:"form-control" %>
			</div>
		</div>
		<div class="col-md-6">

			<div class="form-group">
				<%= form.label "Première tranche (%)" %>
				<%= form.number_field :first_installment, id: :bank_first_installment,  class:"form-control first_installment" %>
			</div>
			<div class="form-group">
				<%= form.label "Solde tranche en %" %>
				<%= form.number_field :number_of_remaining_days, id: :bank_number_of_remaining_days, class:"form-control", readonly: true %>
			</div>

			<div class="form-group">
				<%= form.label "Pourcentage commission hypoplus (%)" %>
				<%= form.number_field :hypoplus_commission_percentage, id: :bank_hypoplus_commission_percentage,  class:"form-control" %>
			</div>
		</div>
			
	</div><!-- modal body -->
	<div class="modal-footer">
		<%= link_to "Annuler", "#", class: "btn", data: {dismiss: "modal"} %>
		<%= form.submit class: "btn btn-primary",  "data-loading-text"=>"Loading...", autocomplete: "off" %>
	</div>
<% end %>