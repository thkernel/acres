
<%= form_with(model: bank, local: false) do |form| %>
	<div class="modal-body">
		<div class="row">
			<div class="col-md-12">
				<ul class="errors">
					<% @bank.errors.full_messages.each do |message| %>
						<li><%= message %></li>
					<% end %>
				</ul>

			<div class="form-group">
				<%= form.label :name %>
				<%= form.text_field :name, id: :bank_name, class:"form-control", placeholder: "Nom" %>
			</div>

			<div class="form-group">
				<%= form.label :description %>
				<%= form.text_field :description, id: :bank_description,  class:"form-control", placeholder: "Description"  %>
			</div>

			<div class="form-group">
				<%= form.label :commission_percentage %>
				<%= form.number_field :commission_percentage, id: :bank_commission_percentage,  class:"form-control" %>
			</div>
		</div>
	</div><!-- modal body -->
	<div class="modal-footer">
		<%= link_to "Annuler", "#", class: "btn", data: {dismiss: "modal"} %>
		<%= form.submit class: "btn btn-primary",  "data-loading-text"=>"Loading...", autocomplete: "off" %>
	</div>
<% end %>