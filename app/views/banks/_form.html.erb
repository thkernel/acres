
<%= form_with(model: bank, local: false) do |form| %>
	<div class="modal-body">
		<ul class="errors">
			<% @bank.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>

		<div class="warning alert alert-danger">
			ATTENTION, le pourcentage de commission, est fixé annuellement. <br />
			Aucun rétrocalcul ne sera effectué lorsque vous modifiez ce pourcentage.
		</div>

		<div class="col-md-6">
			<div class="form-group">
				<%= form.label "Nom" %>
				<%= form.text_field :name, id: :bank_name, class:"form-control", placeholder: "Nom" %>
			</div>

			<div class="form-group">
				<%= form.label "% com" %>
				<%= form.text_field :commission_percentage, id: :bank_commission_percentage,  class:"form-control" %>
			</div>
			
			
			<div class="form-group">
					<%= fields_for(@commission_date_effet) do |de| %>
				<%= de.hidden_field :old_rate,  class:"form-control", :id => "old_rate", value: @bank.commission_percentage %>
				<%= de.date_field :start_date,  class:"form-control", :id => "start_date" %>
					<% end %>
			</div><!-- end nested -->

			<div class="form-group">
				<%= form.label "Nombre d'écheance" %>
				<%= form.number_field :number_of_dates, id: :bank_number_of_dates,  class:"form-control" %>
			</div>
		</div>
		<div class="col-md-6">

			<div class="form-group">
				<%= form.label "Première tranche (%)" %>
				<%= form.text_field :first_installment, id: :bank_first_installment,  class:"form-control first_installment" %>
			</div>
			<div class="form-group">
				<%= form.label "Solde tranche en %" %>
				<%= form.text_field :number_of_remaining_days, id: :bank_number_of_remaining_days, class:"form-control", readonly: true %>
			</div>

			<div class="form-group">
				<%= form.label "% com hypoplus" %>
				<%= form.text_field :hypoplus_commission_percentage, id: :bank_hypoplus_commission_percentage,  class:"form-control" %>
			</div>
		</div>
			
	</div><!-- modal body -->
	<div class="modal-footer">
		<%= link_to "Annuler", "#", class: "btn", data: {dismiss: "modal"} %>
		<%= form.submit "Enregistrer", class: "btn btn-warning",  "data-loading-text"=>"Loading...", autocomplete: "off" %>
	</div>
<% end %>