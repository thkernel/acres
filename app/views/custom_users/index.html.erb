<div class="container">
	<div class="row">
	<div class="col-md-12">
	<div class="index-heading pull-left">
	<h3>Liste des utilisateurs</h3>
	</div>
   <div class="pull-right">
   <p>
	<%= link_to raw('<i class="fa fa-plus" aria-hidden="true"></i> Nouveau'), new_user_path, class: "btn btn-primary", remote: true %>
	</p>
	</div>
	</div>
 </div>
  <div class="row">
 <div class="col-lg-12">
	<div class="panel panel-default">
		  
			 
					<div class="panel-body">
		<table id="table-list" class="table table-striped table-bordered table-hover">
		  <thead>
			<tr>
			  <th>E-mail</th>
				<th>Actions</th>
			  
			</tr>
		  </thead>

		  <tbody class="users-index">
			<% @users.each do |user| %>
			  <tr>
					<td><%= user.email %></td>
					<td>
					<div class="action-buttons">
					<%= link_to raw('<i class="fa fa-pencil" aria-hidden="true"></i>
'), edit_user_path(user), title: "Modifier", remote: true %>
					<%= link_to raw('<i class="fa fa-trash-o" aria-hidden="true"></i>
'), delete_user_path(user), remote: true, title: "Supprimer", class: "delete" %>
</div>
</td>

			  </tr>
			<% end %>
		  </tbody>
		</table>
	</div>
	</div>
</div>
</div>
</div>
<div id="user-modal" class="modal fade"></div>