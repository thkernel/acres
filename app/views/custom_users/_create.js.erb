$("ul.errors").html("");
<% if @user.errors.any? %>
  <% @useromer.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"));
  <% end %>
<% else %>
  $(".users-index").html("<%= escape_javascript(render 'index') %>");
  $("#user-modal").modal("hide");
 
<% end %>