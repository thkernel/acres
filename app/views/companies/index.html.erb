<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="index-heading pull-left">
      <h3>Liste des sociétés</h3>
    
    </div>
<div class="pull-right">
<p>
<%= link_to raw('<i class="fa fa-plus" aria-hidden="true"></i> Nouveau'), new_company_path, class: "btn btn-primary", remote: true %>
</p>
</div>
</div>
</div>

<div class="row">
<div class="col-md-12">
<div class="panel panel-default">
<div class="panel-body">
<table  id="table-list" class="table table-striped table-bordered table-hover">

  <thead>
    <tr>
      <th>Nom</th>
      <th>Adresse</th>
      <th>Ville</th>
      <th>Pays</th>
      <th>Téléphone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.address %></td>
        <td><%= company.city %></td>
        <td><%= company.country %></td>
        <td><%= company.phone %></td>

        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>

</div>

<div id="company-modal" class="modal fade"></div>
