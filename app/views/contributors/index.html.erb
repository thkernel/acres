

<div class="container">

<div class="row">
<div class="col-md-12">
<div class="index-heading pull-left">
    <h3>Liste des apporteurs</h3>
    </div>
<div class="pull-right">
<p>
<%= link_to raw('<i class="fa fa-plus" aria-hidden="true"></i> Nouveau'), new_contributor_path, class: "btn btn-primary" %>
</p>
</div>
</div>
</div>

<div class="row">
<div class="col-md-12">
<div class="panel panel-default">
<div class="panel-body">

<table id="table-list" class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Email</th>
      <th>City</th>
      <th>Country</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contributors.each do |contributor| %>
      <tr>
        <td><%= contributor.first_name %></td>
        <td><%= contributor.last_name %></td>
        <td><%= contributor.address %></td>
        <td><%= contributor.phone %></td>
        <td><%= contributor.email %></td>
        <td><%= contributor.city %></td>
        <td><%= contributor.country %></td>
        <td><%= contributor.notes %></td>
        <td><%= link_to 'Show', contributor %></td>
        <td><%= link_to 'Edit', edit_contributor_path(contributor) %></td>
        <td><%= link_to 'Destroy', contributor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

    </div>
    </div>
</div>
</div>
</div>
