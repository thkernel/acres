$("ul.errors").html("");
<% if @credit.errors.any? %>
  <% @credit.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"));
  <% end %>
<% else %>
  $(".credits").html("<%= escape_javascript(render 'index') %>");
  $("#credit-modal").modal("hide");
 
<% end %>