<%= form_with(model: credit, local: false) do |form| %>
 <div class="modal-body">
		<div class="row">
			<div class="">
				<ul class="errors">
					<% @credit.errors.full_messages.each do |message| %>
						<li><%= message %></li>
					<% end %>
				</ul>
			</div>
			<div class="col-xs-5">
				<div class="form-group">
					<%= form.label :credit_id %>
					<%= form.number_field :credit_id, id: :credit_id, class: "form-control" %>
				</div>

				<div class="form-group">
					<%= form.label :production_date %>
					<%= form.date_field :production_date, id: :credit_production_date, class: "form-control" %>
          		</div>
				<div class="form-group">
					<%= form.label :acte_date %>
					<%= form.date_field :acte_date, id: :credit_acte_date, class: "form-control" %>
				</div>
				 <div class="form-group">
					<%= form.label :customer_name %>
					<%= form.text_field :customer_name, id: :credit_customer_name , class: "form-control" %>
				</div>
				<div class="form-group">
					<%= form.label :producer_name %>
					<%= form.text_field :producer_name, id: :credit_producer_name , class: "form-control" %>
				</div>
			</div>

			<div class="col-xs-5">
			
				<div class="form-group">
					<%= form.label :contributor_name %>
					<%= form.text_field :contributor_name, id: :credit_contributor_name , class: "form-control" %>
				</div>

				<div class="form-group">
					<%= form.label :notary_name %>
					<%= form.text_field :notary_name, id: :credit_notary_name , class: "form-control" %>
				</div>
				<div class="form-group">
					<%= form.label :bank_name %>
					<%= form.text_field :bank_name, id: :credit_bank_name, class: "form-control" %>
				</div>
				<div class="form-group">
					<%= form.label :amount %>
					<%= form.text_field :amount, id: :credit_amount, class: "form-control"  %>
				</div>
			</div>
		</div>
	</div><!-- modal body -->
	<div class="modal-footer">
		<%= link_to "Annuler", "#", class: "btn", data: {dismiss: "modal"} %>
		<%= form.submit class: "btn btn-primary",  "data-loading-text"=>"Loading...", autocomplete: "off" %>
	</div>
<% end %>