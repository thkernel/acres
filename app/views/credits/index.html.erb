
<div class="container">

<div class="row">
<div class="col-md-12">
<div class="index-heading pull-left">
    <h3>Liste des cr√©dits</h3>
    </div>
<div class="pull-right">
<p>
<%= link_to raw('<i class="fa fa-file-excel-o" aria-hidden="true"></i>
 Importer'), new_credit_path, class: "btn btn-primary", remote: true %>
</p>
</div>
</div>
</div>

<div class="row">
<div class="col-md-12">
<div class="panel panel-default">
<div class="panel-body">
<table id="table-list" class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Production date</th>
      <th>Acte date</th>
      <th>Customer</th>
      <th>Bank</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @credits.each do |credit| %>
      <tr>
        <td><%= credit.production_date %></td>
        <td><%= credit.acte_date %></td>
        <td><%= credit.customer_id %></td>
        <td><%= credit.bank_id %></td>
        <td><%= credit.amount %></td>
        <td><%= link_to 'Show', credit %></td>
        <td><%= link_to 'Edit', edit_credit_path(credit) %></td>
        <td><%= link_to 'Destroy', credit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>

</div>

