
<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div class="index-heading pull-left">
				<h3>Liste des crédits</h3>
			</div>
			<div class="pull-right">
				<p>
				<%= link_to raw('<i class="fa fa-file-excel-o" aria-hidden="true"></i>
				Importer'), new_credit_path, class: "btn btn-primary", remote: true %>
				</p>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-md-12">
			<div class="panel panel-default">
				<div class="panel-body">
					<table id="table-list" class="table table-striped table-bordered table-hover">
						<thead>
							<tr>
							<th>N° Dossier</th>
							<th>Date production</th>
							<th>Date acte</th>
							<th>Client</th>
							<th>Banque</th>
							<th>Montant</th>
							<th>Apporteur</th>
							<th>Producteur</th>
							<th>Notaire</th>
							<th>Actions</th>
							</tr>
						</thead>

						<tbody class="credits">
							<%= render('index') %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
	<div id="credit-modal" class="modal fade"></div>
</div>