<p id="notice"><%= notice %></p>

<h1>Credits</h1>

<table>
  <thead>
    <tr>
      <th>Production date</th>
      <th>Acte date</th>
      <th>Customer</th>
      <th>Bank</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @credits.each do |credit| %>
      <tr>
        <td><%= credit.production_date %></td>
        <td><%= credit.acte_date %></td>
        <td><%= credit.customer_id %></td>
        <td><%= credit.bank_id %></td>
        <td><%= credit.amount %></td>
        <td><%= link_to 'Show', credit %></td>
        <td><%= link_to 'Edit', edit_credit_path(credit) %></td>
        <td><%= link_to 'Destroy', credit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

