$("ul.errors").html("");
<% if @mail_configuration.errors.any? %>
  <% @mail_configuration.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"));
  <% end %>
<% else %>
  $(".smtp").html("<%= escape_javascript(render 'index') %>");
  $("#smtp-modal").modal("hide");
 
<% end %>