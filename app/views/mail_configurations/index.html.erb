<div class="container">
    <div class="row">
    <div class="col-md-12">
    <div class="index-heading pull-left">
    <h3>Configurations SMTP</h3>
    </div>
   <div class="pull-right">
   <p>
<%= link_to raw('<i class="fa fa-plus" aria-hidden="true"></i> Nouveau'), new_mail_configuration_path ,  class: "btn btn-primary", remote: true %>    </p>
    </div>
    </div>
 </div>
  <div class="row">
 <div class="col-lg-12">
    <div class="panel panel-default">
          
             
                    <div class="panel-body">

<table id="table-list" class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Host</th>
      <th>User name</th>
      <th>Password</th>
      <th>Domain</th>
      <th>Address</th>
      <th>Port</th>
      <th>Authentication</th>
      <th>Starttls auto</th>
      <th>Ssl</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mail_configurations.each do |mail_configuration| %>
      <tr>
        <td><%= mail_configuration.host %></td>
        <td><%= mail_configuration.user_name %></td>
        <td><%= mail_configuration.password %></td>
        <td><%= mail_configuration.domain %></td>
        <td><%= mail_configuration.address %></td>
        <td><%= mail_configuration.port %></td>
        <td><%= mail_configuration.authentication %></td>
        <td><%= mail_configuration.enable_starttls_auto %></td>
        <td><%= mail_configuration.ssl %></td>

        <td><%= link_to 'Show', mail_configuration %></td>
        <td><%= link_to 'Edit', edit_mail_configuration_path(mail_configuration) %></td>
        <td><%= link_to 'Destroy', mail_configuration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
    </div>
</div>
</div>
</div>

<div id="smtp-modal" class="modal fade"></div>