<div class="page login-page d-flex" >
    <div class="container">
        <div class="form-outer   align-items-center">
            <div class="logo text-uppercase text-center " >
                <span> ACR</span> <strong class="text-primary">ES</strong>
            </div>
            <div class="form-inner">
            	<h2 class= "form-title text-center">Inscription</h2>

				<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
					<%= devise_error_messages! %>

					<div class="row">
						<div class="col-xs-6">
							<div class="form-group">
								<%= f.label "Prénom" %>
								<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control", placeholder: "Prénom" %>
							</div>
						</div>
						<div class="col-xs-6">
							<div class="form-group">
								<%= f.label "Nom" %>
								<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control", placeholder: "Nom" %>
							</div>
						</div>
						<div class="col-md-12">

							<div class="form-group">
								<%= f.label "Rôle" %>
								<%= f.collection_select(:role, @roles,  :name, :name , {prompt: "Votre rôle"}, class: "form-control", required: true) %>
														
							</div>
				
							<div class="form-group">
								<%= f.label :email %>
								<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "votremail@domaine.com" %>
							</div>

							<div class="form-group">
								<%= f.label :password %>
								<% if @minimum_password_length %>
								<em>(<%= @minimum_password_length %> characters minimum)</em>
								<% end %><br />
								<%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "********" %>
							</div>

							<div class="form-group">
								<%= f.label :password_confirmation %><br />
								<%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "********" %>
							</div>
							
							<div class="form-group b-signup">
								<%= f.submit "S'inscrire", class: "btn btn-primary"  %>
							</div>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
